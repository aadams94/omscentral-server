{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types/", "./src/@types"]
  },
  "include": ["src", "database"]
}
